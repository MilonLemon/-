#include "stdafx.h"
#include <iostream>

using namespace std;
struct Node
{
	int x;
	Node *Next, *Prev;
};

class List
{
	Node *Head, *Tail;
public:
	List() :Head(NULL), Tail(NULL) {};
	~List();
	void Show();
	void Add(int x);
	void Ymn();
};


List::~List()
{
	while (Head)
	{
		Tail = Head->Next;
		delete Head;
		Head = Tail;
	}
}

void List::Add(int x)
{
	Node *temp = new Node;
	temp->Next = NULL;
	temp->x = x;

	if (Head != NULL)
	{
		temp->Prev = Tail;
		Tail->Next = temp;
		Tail = temp;
	}
	else
	{
		temp->Prev = NULL;
		Head = Tail = temp;
	}
}

void List::Show()
{
	Node *temp = Tail;

	temp = Head;
	while (temp != NULL)
	{
		cout << temp->x << " ";
		temp = temp->Next;
	}
	cout << "\n";
}

void List::Ymn()
{

	Node *temp = Tail;
	Node *temp1 = Head;
	int h = 0;

	while (temp != NULL && temp1 != NULL)
	{
		cout << (temp->x)*(temp1->x) << ' ';
		h += temp->x*temp1->x;
		temp = temp->Prev;
		temp1 = temp1->Next;

	}
	cout << "\n";
	cout << "\n" << "Сумма равна " << h;

}

int main(void) {

	setlocale(LC_ALL, "Russian");

	int n;
	List lst;
	cout << "Введите количество чисел:\n";
	cin >> n;
	int *a = new int[n];
	cout << "Введите числа:\n";
	for (int i = 0; i < n; i++)
		cin >> a[i];

	cout << "\n";

	for (int i = 0; i < n; i++)
		lst.Add(a[i]);

	lst.Show();
	lst.Ymn();

	cout << '\n';
	system("pause");

}
