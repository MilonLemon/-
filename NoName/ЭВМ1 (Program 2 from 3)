#include "stdafx.h"
#include "stdio.h"
#include <iostream>

using namespace std;

int main()
{
	setlocale(LC_ALL, "Russian");

	int m, n;
	char c;
	cout << "Введите количество строк и столбцов массива:\n";
	cin >> m >> n;
	int **a = new int*[m];
	for (int i = 0; i < m; i++)
	{
		a[i] = new int[n];
	}
	cout << "Введите числа массива:\n";

	for (int i = 0; i < m; i++)
		for (int j = 0; j < n; j++)
			cin >> a[i][j];


	for (;;)
	{
		cout << "\n";
		cout << "Какое действие выполнить?\n";
		cout << "1)Определение номера минимального положительного элемента массива\n";
		cout << "2)Определение значения элемента массива по его индексу\n";
		cout << "3)Поменять местами строки масcива, заданные пользователем\n";
		cout << "4) Поменять местами первый и последний столбцы массива\n";
		cout << "\n";
		cin >> c;
		cout << "\n";
		switch (c) {

		case '1':
		{
			int min = a[0][0];
			int b = 0, d = 0;
			for (int i = 0; i < m; i++)
				for (int j = 0; j < n; j++)
					if (a[i][j]<min)
					{
						min = a[i][j];
						b = i;
						d = j;
					}

			cout << b + 1 << "- номер строки\n";
			cout << d + 1 << "- номер столбца\n";
			break; }

		case '2':
		{
			int b = 0, d = 0;
			cout << "Введите номер строки и столбца:\n";
			cin >> b >> d;
			cout << a[b - 1][d - 1] << "- значение элемента\n";
			break; }

		case '3':
		{
			int *c = new int [n];

			int b = 0, d = 0;
			cout << "Введите номера строк, которые нужно поменять:\n";
			cin >> b >> d;

			for (int j = 0; j < n; j++)
				{
					c[n] = a[b - 1][j];
					a[b - 1][j] = a[d - 1][j];
					a[d - 1][j] = c[n];
				}

			for (int i = 0; i < m; i++)
			{
				for (int j = 0; j < n; j++)
					cout << a[i][j] << " ";
				cout << "\n";
			}
			cout << "\n";
			cout << " - массив после изменения\n";
			break; }

		case '4':
		{
			int *c = new int[m];
			for (int i = 0; i < m; i++)
			{
				c[i] = a[i][0];
				a[i][0] = a[i][n-1];
				a[i][n-1] = c[i];
			}

			for (int i = 0; i < m; i++)
			{
				for (int j = 0; j < n; j++)
					cout << a[i][j];
				cout << "\n";
			}
			cout << "\n";
			cout << " - массив после изменения\n";

			break; }

		default:
		{
			cout << "Ошибка\n";
			break;
		}
		}
	}

	system("pause");
	return 0;

}

